{
  "compilerOptions": {
    "target": "es2017", // Specify ECMAScript target version
    "lib": ["dom", "dom.iterable", "esnext"], // Specify library files to be included in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "esModuleInterop": true, // Enables ES6 module interoperability
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": false, // Disallow inconsistently-cased references to the same file
    "module": "esnext", // Specify module code generation
    "moduleResolution": "node", // Determine how modules get resolved
    "resolveJsonModule": true, // Include modules imported with '.json' extension
    "isolatedModules": true, // Ensure each file can be safely transpiled without relying on other imports
    "jsx": "react", // Support JSX in .tsx files
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "img/*": ["src/img/*"],
      "sections/*": ["src/sections/*"],
      "utils/*": ["src/utils/*"],
    },
    "noEmit": true // Do not emit outputs (if using with Babel)
  },
  "include": [
    "src", // Include all files in the src directory,
    "src/Types/**/*.d.ts", // Include your custom type definitions
    "./vite-env.d.ts"
  ]
}